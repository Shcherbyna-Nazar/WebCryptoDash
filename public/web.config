<?xml version="1.0" encoding="UTF-8"?>
<configuration>
  <system.webServer>
    <rewrite>
      <rules>
        <!-- Rewrite specific URLs -->
        <rule name="Rewrite Crypto Details" stopProcessing="true">
          <match url="^crypto/details/(.*)$" />
          <action type="Rewrite" url="/crypto/details/{R:1}" />
        </rule>

        <!-- Rewrite all non-API requests to the root URL for React Router -->
        <rule name="React Routes" stopProcessing="true">
          <match url=".*" />
          <conditions logicalGrouping="MatchAll">
            <!-- Exclude existing files -->
            <add input="{REQUEST_FILENAME}" matchType="IsFile" negate="true" />
            <!-- Exclude existing directories -->
            <add input="{REQUEST_FILENAME}" matchType="IsDirectory" negate="true" />
            <!-- Exclude requests to the '/api' path -->
            <add input="{REQUEST_URI}" pattern="^/api" negate="true" />
          </conditions>
          <!-- Rewrite to the root URL -->
          <action type="Rewrite" url="/" />
        </rule>
      </rules>
    </rewrite>
  </system.webServer>
</configuration>
